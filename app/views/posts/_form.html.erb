<!-- BEGIN: Form Layout -->
<div class="intro-y box p-5">
  <%= form_for @post do |f| %>
      <%= form_error_notification(@post) %>
      <div class="mt-3">
        <%= f.label :primeiro, class:"form-label" %>
        <%= f.text_field :primeiro, class: 'form-control w-full', placeholder: true  %>
      </div>
      <div class="mt-3">
        <%= f.label :segundo, class:"form-label" %>
        <%= f.text_field :segundo, class: 'form-control w-full', placeholder: true  %>
      </div>
      <div class="text-right mt-5">
        <button type="button" data-tw-dismiss="modal" class="btn btn-outline-secondary w-20 mr-1">Cancel</button>
        <%= f.submit 'Save', class: 'btn btn-primary w-24' %>
    </div>
  <% end %>
</div>
<!-- END: Form Layout -->


