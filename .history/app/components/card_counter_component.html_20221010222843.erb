<div class="col-span-12 sm:col-span-6 xl:col-span-3 intro-y">
  <div class="report-box zoom-in">
    <div class="box p-5">
      <div class="flex">
        <i data-lucide="<%= @icon %>" class="report-box__icon text-primary"></i> 
        <div class="ml-auto">
          <div class="report-box__indicator <%= @percent.positive? ? 'bg-success' : 'bg-danger' %> tooltip cursor-pointer" title="<%= @percent %>% Higher than last month"> <%= @percent %>% <i data-lucide="chevron-up" class="w-4 h-4 ml-0.5"></i> </div>
        </div>
      </div>
      <div class="text-3xl font-medium leading-8 mt-6"><%= @value %></div>
      <div class="text-base text-slate-500 mt-1"><%= @subtitle %></div>
    </div>
  </div>
</div>